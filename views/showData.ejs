<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <link rel="stylesheet" href="https://rupamcompany.000webhostapp.com/Li2/weatherApp/css/mainStyle.css">

    <title>Showing Weather Report</title>

    <style>
        .tempA{
            font-weight: 600;
            font-size: 2.85714rem;
            line-height: 1;
            padding:20px;
            padding-bottom: 0px;
            margin-bottom: 0px;
            width: 100%;
        }
    </style>

  </head>
  <body>

    <% let Fertemp = weatherData.currently['temperature'] %>
    <% let summaryOfArea = weatherData.currently['summary'] %>
    <% let icon = weatherData.currently['icon'] %>
    <% let humidity = weatherData.currently['humidity'] %>
    <% let pressure = weatherData.currently['pressure'] %>
    <% let visibility = weatherData.currently['visibility'] %>
    <% let dewPoint = weatherData.currently['dewPoint'] %>
    <% let windSpeed = weatherData.currently['windSpeed'] %>
    <% let cityName = name %>
    <% let celTemp = Math.round(((Fertemp - 32)*5/9).toFixed(2)) %>

    <nav>
        <a><%= celTemp %> <sup>°</sup> <%= cityName %> </a>
    </nav>

    <div class="container" style="margin-top:5px;">
        <div class="row">
            <div class="col-md-5">
                <section class="sectionWeather">
                    <p class="tempA" style="color:#fff;"><%= celTemp %> <sup>°</sup></p>
                    <P class="tempA" style="font-size: 24px;color:#fff;padding-top:10px;"><%= summaryOfArea %></P>
                </section>
            </div>
            <div class="col-md-2"> 
                <caption>Right Now</caption>
                <table>
                    <tbody>
                        <tr><th>Wind</th><td>
                            <span class=""><%= windSpeed %> km/h </span>
                        </td></tr>

                        <tr><th>Humidity</th><td>
                            <span class="">
                                <span><%= humidity %>
                                    <span class="">%</span>
                                </span>
                            </span>
                        </td></tr>
                        
                        <tr>
                            <th>Dew Point</th><td>
                            <span class=""><%= dewPoint %><sup>°</sup></span>
                        </td></tr>

                        <tr><th>Pressure</th><td>
                            <span class=""><%= pressure %> mb 
                                <span classname=""></span>
                            </span>
                        </td></tr>
                        <tr><th>Visibility</th><td>
                                <span class=""><%= visibility %> km</span>
                        </td></tr>
                    </tbody>
                </table>
            </div> 

            <div class="col-md-5">
                <% let urlMap = "https://maps.google.com/maps?q="+ name +"&iwloc=&output=embed" %>
                <div class="mapouter"><div class="gmap_canvas"><iframe width="100%" height="300" id="gmap_canvas" src="<%= urlMap %>" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe></div><style>.mapouter{position:relative;text-align:right;height:300px;width:100%;}.gmap_canvas {overflow:hidden;background:none!important;height:300px;width:100%;}</style></div>
            </div>

        </div>

        <h3><a href="/" style="text-decoration: none;margin-top:15px;font-size:16px;">Click to Search Again</a></h3>

    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </body>
</html>